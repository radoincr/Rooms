@page "/login"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components
<PageTitle>Login</PageTitle>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4 shadow rounded">
        <img src="o_685.jpg" width="360px" height="140px" class="mb-3"/>

        <form class="loginform" action="/Login/Login" method="post">
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input type="email" class="form-control" name="email" placeholder="Enter your email" required/>
            </div>

            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password" required/>
            </div>

            <button class="btn btn-primary w-100" type="submit">Login</button>
        </form>

        <!-- Google Login Button -->
        <form action="/Login/LoginGoogle" method="get" class="mt-3">
            <button type="submit" class="btn btn-light w-100 d-flex align-items-center justify-content-center">
                <img src="Google__G__logo.svg.png" width="24" height="24" class="me-2"/>
                Login with Google
            </button>
        </form>

        <!-- Sign Up Link -->
        <div class="text-center mt-3">
            <span>Don't have an account? </span>
            <a href="#" @onclick="ToggleSignUp">Sign Up</a>
        </div>
    </div>
</div>



<style>
    .login-card {
        width: 400px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .vh-100 {
        height: 100vh !important;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

@code {
private bool showSignUp = false;
[Inject] NavigationManager Manager { set; get; }

private void ToggleSignUp()
{
Manager.NavigateTo("SignUp",forceLoad:true);
}
}
